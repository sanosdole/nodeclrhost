{
  "name": "@nodeclrhost/coreclr-hosting",
  "version": "0.1.0-alpha.1",
  "description": "Hosting coreclr in node",
  "main": "bindings.js",
  "gypfile": true,
  "scripts": {
    "build": "npm run build:debug && npm run build:release",
    "build:debug": "node-gyp build --debug",
    "build:release": "node-gyp build",
    "clean": "node-gyp clean",
    "build-testapp": "node build-scripts/dotnet-publish.js test/TestApp/TestApp.csproj test/bin/published",
    "test": "npm run build && npm run build-testapp && mocha",
    "test-only": "npm run build-testapp && mocha",
    "prepare": "npm run test"
  },
  "author": "Daniel Martin",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^6.2.2",
    "node-gyp": "^6.0.1"
  },
  "dependencies": {
    "node-addon-api": "1.7.1"
  }
}
